<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searched_nav"
    app:startDestination="@id/searchedMoviesListFragment">

    <fragment
        android:id="@+id/searchedMoviesListFragment"
        android:name="com.example.movie.ui.fragments.list_frags.SearchedMoviesListFragment"
        android:label="SearchedMoviesListFragment">
        <action
            android:id="@+id/action_searchedMoviesListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment">
            <argument
                android:name="chosenMovie"
                app:argType="com.example.movie.request.model.MovieModel" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.movie.ui.fragments.MovieDetailsFragment"
        tools:layout="@layout/fragment_movie_details"
        android:label="fragment_movie_details">
        <argument
            android:name="chosenMovie"
            app:argType="com.example.movie.request.model.MovieModel" />
    </fragment>
</navigation>